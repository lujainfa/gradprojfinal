<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lujainalfalaileh.bloodbank.AvailableBtypes"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:theme="@style/MyCustomTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="368dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:text="Check Needed Donation Type:"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="372dp"
        android:layout_height="34dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="Check Not Needed Blood Types:"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolb"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bSave"
        app:layout_constraintLeft_toLeftOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1">

        <CheckBox
            android:id="@+id/cWholeBlood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whole Blood Donation"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-18dp" />

        <CheckBox
            android:id="@+id/cRedCells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automated Red Cell Donation"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="412dp" />

        <CheckBox
            android:id="@+id/cPlatelet "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platelet Donation"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="396dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_marginLeft="23dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView31"
        app:layout_constraintLeft_toLeftOf="@+id/textView31"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <CheckBox
            android:id="@+id/cO1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="false"
            android:text="@string/o"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cO2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="O+"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cB1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="B-"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cB2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="B+"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cAB1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="AB-"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cAB2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="AB+"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="A-"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="392dp" />

        <CheckBox
            android:id="@+id/cA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="A+"
            tools:layout_editor_absoluteX="831dp"
            tools:layout_editor_absoluteY="379dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bSave"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        android:theme="@style/ThemeOverlay.MyDarkButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
